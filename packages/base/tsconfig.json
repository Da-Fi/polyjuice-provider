{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "lib": ["es2020", "DOM", "ES2015"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowJs": true
  },
  "exclude": ["node_modules", "tests", "lib"],
  "include": ["src"]
}
